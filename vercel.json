{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.ecuacasa.com" }],
      "destination": "https://ecuacasa.com/:path*",
      "permanent": true
    },
    {
      "source": "/servicios/:slug*",
      "destination": "/services/:slug*",
      "permanent": true
    },
    {
      "source": "/servicios",
      "destination": "/services",
      "permanent": true
    },
    {
      "source": "/plomeria",
      "destination": "/services/plomeria",
      "permanent": true
    },
    {
      "source": "/limpieza",
      "destination": "/services/limpieza",
      "permanent": true
    },
    {
      "source": "/electricidad",
      "destination": "/services/electricidad",
      "permanent": true
    },
    {
      "source": "/handyman",
      "destination": "/services/handyman",
      "permanent": true
    },
    {
      "source": "/jardineria",
      "destination": "/services/jardineria",
      "permanent": true
    },
    {
      "source": "/pintura",
      "destination": "/services/pintura",
      "permanent": true
    },
    {
      "source": "/mudanzas",
      "destination": "/services/mudanzas",
      "permanent": true
    },
    {
      "source": "/cerrajeria",
      "destination": "/services/cerrajeria",
      "permanent": true
    },
    {
      "source": "/how",
      "destination": "/how-it-works",
      "permanent": true
    },
    {
      "source": "/contact",
      "destination": "/solicitar",
      "permanent": true
    },
    {
      "source": "/blog/como-elegir-plomero-cuenca",
      "destination": "/services/plomeria",
      "permanent": true
    },
    {
      "source": "/blog/mantenimiento-electrico-hogar",
      "destination": "/services/electricidad",
      "permanent": true
    },
    {
      "source": "/sign-up",
      "destination": "/for-providers",
      "permanent": true
    },
    {
      "source": "/sign-in",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/about",
      "destination": "/",
      "permanent": true
    }
  ]
}
